{
    "name":"Color Identifier",
    "description":"A color identifier extension",
    "version":"1.0",
    "manifest_version":3,
    "background":{
        "service_worker":"background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "options_page": "options.html",
    "icons":{
        "16":"/images/picker_16.png",
        "32":"/images/picker_32.png",
        "48":"/images/picker_48.png"

    },
    "action":{
        "default_popup":"pop.html"
    }
}